<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.akshunna.bloodbank">

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
  <uses-permission android:name="android.permission.CALL_PHONE" />

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
    android:usesCleartextTraffic="true">
    <activity android:name="com.akshunna.bloodbank.Activities.SearchResults"></activity>
    <activity android:name="com.akshunna.bloodbank.Activities.MakeRequestActivity" />
    <activity android:name="com.akshunna.bloodbank.Activities.SearchActivity" />
    <activity android:name="com.akshunna.bloodbank.Activities.LoginActivity" />
    <activity android:name="com.akshunna.bloodbank.Activities.RegisterActivity" />
    <activity android:name="com.akshunna.bloodbank.Activities.SplashScreen">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <activity android:name="com.akshunna.bloodbank.Activities.MainActivity" />
  </application>

</manifest>